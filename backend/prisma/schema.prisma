// Recurrence frequency
enum RecurrenceFrequency {
  WEEKLY // Every week
  BIWEEKLY // Every 2 weeks
  MONTHLY // Every month
  BIMONTHLY // Every 2 months
  QUARTERLY // Every 3 months
  QUADMONTHLY // Every 4 months
  SEMIANNUALLY // Every 6 months
